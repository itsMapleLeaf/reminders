{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["dom", "es2018"],
    "esModuleInterop": true,
    "jsx": "react",
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": ["styled", "css", "keyframes", "injectGlobal"]
      }
    ]
  },
  "include": ["src/**/*"]
}
